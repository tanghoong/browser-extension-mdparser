{
  "manifest_version": 3,
  "name": "Markdown Parser",
  "version": "1.0.0",
  "description": "Automatically detect and render Markdown files in the browser with Mermaid diagram support",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "file://*/*",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>",
        "file://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>", "file://*/*"]
    }
  ]
}
